<?xml version="1.0" encoding="utf-8"?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003" ToolsVersion="4.0">

    <ItemGroup Condition=" '$(PlatformTarget)' == 'x86' ">
        <None Include="$(MSBuildThisFileDirectory)..\..\runtimes\win7-x86\native\libCrunch.dll">
            <Link>libCrunch.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup Condition=" '$(PlatformTarget)' == 'x64' ">
        <None Include="$(MSBuildThisFileDirectory)..\..\runtimes\win7-x64\native\libCrunch.dll">
            <Link>libCrunch.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
	
	<PropertyGroup Condition=" '$(PlatformTarget)' != 'x64' and '$(PlatformTarget)' != 'x86' ">
        <PreferredNativeCrunch Condition=" '$(PreferredNativeCrunch)' == '' and '$(Prefer32Bit)' == 'False' ">x64</PreferredNativeCrunch>
        <PreferredNativeCrunch Condition=" '$(PreferredNativeCrunch)' == '' ">x86</PreferredNativeCrunch>
    </PropertyGroup>
	
	<ItemGroup Condition=" '$(PlatformTarget)' != 'x64' and '$(PlatformTarget)' != 'x86' ">
        <None Include="$(MSBuildThisFileDirectory)..\..\runtimes\win7-x86\native\libCrunch.dll">
            <Link>x86\libCrunch.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="$(MSBuildThisFileDirectory)..\..\runtimes\win7-x64\native\libCrunch.dll">
            <Link>x64\libCrunch.dll</Link>
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
        <None Include="$(MSBuildThisFileDirectory)..\..\runtimes\win7-$(PreferredNativeCrunch)\native\libCrunch.dll" Condition=" '$(PreferredNativeCrunch)' == 'x86' or '$(PreferredNativeCrunch)' == 'x64' ">
            <Link>libCrunch.dll</Link>
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

</Project>